<% if @song.errors %>
	<% @song.errors.full_messages.each do |message| %>
		<li><%= message %></li>
	<% end %>
<% end %>

<%= form_for @song do |s| %>
	<div>
	<%= s.label :title %>
	<%= s.text_field :title %>
	</div>
	<div>
	<%= s.label :released %>
	<%= s.check_box :released %>
	</div>
	<div>
	<%= s.label :release_year %>
	<%= s.number_field :release_year %>
	</div>
	<div>
	<%= s.label :artist_name %>
	<%= s.text_field :artist_name %>
	</div>
	<div>
	<%= s.label :genre %>
	<%= s.text_field :genre %>
	</div>
	<div>
	<%= s.submit "Create Song" %>
	</div>
<% end %>

